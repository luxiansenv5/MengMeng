<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.mengmeng.serviceactivity.TakePhotoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99ff0000">

        <ImageView
            android:id="@+id/mtback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:textSize="26sp"
            android:text="拍照"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:background="#00000000"/>

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_desr"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:layout_below="@id/toobar"
        android:textColor="#000"
        android:layout_margin="12dp"
        android:textSize="20sp"
        android:maxLength="500"
        android:hint="说点什么吧"
        android:textColorHint="#000" />
    <!--<EditText-->
        <!--android:id="@+id/et_desr"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="120dp"-->
        <!--android:layout_below="@id/toobar"-->
        <!--android:hint="你好"-->
        <!--android:textColorHint="#000"/>-->

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mcamera"
        android:layout_below="@id/et_desr"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/iv_openPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/madd"
        android:layout_alignBottom="@id/iv_camera"
        android:layout_toRightOf="@id/iv_camera"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/simage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_camera"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_openPhoto"
        android:textSize="20sp"
        android:layout_marginRight="12dp"/>

    <ImageView
        android:id="@+id/dingwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/city"
        android:src="@drawable/location"
        android:layout_alignBottom="@+id/city"

        />

</RelativeLayout>

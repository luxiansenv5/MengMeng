<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.mengmeng.serviceactivity.TakePhotoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0176da">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:textSize="26sp"
            android:text="拍照"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="20sp"
            android:layout_marginLeft="100dp"
            android:background="#0176da"/>

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_desr"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        android:textColor="#000"
        android:layout_margin="12dp"
        android:layout_below="@id/toobar"
        android:textSize="20sp"
        android:maxLength="500"
        android:singleLine="false"
        android:hint="说点什么吧"/>
    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mcamera"
        android:layout_below="@id/et_desr"
        android:layout_marginLeft="15dp"/>
    <ImageView
        android:id="@+id/iv_openPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/madd"
        android:layout_alignBottom="@id/iv_camera"
        android:layout_toRightOf="@id/iv_camera"
        android:layout_marginLeft="12dp"/>

    <ImageView
        android:id="@+id/iv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/position"
        android:layout_alignBottom="@id/iv_camera"
        android:layout_alignRight="@id/et_desr"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="位置"
        android:textSize="26sp"
        android:layout_alignBottom="@id/iv_position"
        android:layout_toLeftOf="@id/iv_position"/>

    <ImageView
        android:id="@+id/simage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_camera"
        android:layout_marginTop="12dp"/>

</RelativeLayout>
